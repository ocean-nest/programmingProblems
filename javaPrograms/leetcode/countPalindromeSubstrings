class Solution {
    public int countSubstrings(String s) {

        int totalCount = 0;

        for(int i=0; i<s.length(); i++) {

            totalCount += palCount(s, i, i);
            totalCount += palCount(s, i, i+1);



        }
        return totalCount;

    }

    public int palCount(String s, int left, int right) {
        int palCount = 0;
        while(left >=0 && right < s.length() && s.charAt(left) == s.charAt(right)) {
            left--;
            right++;
            palCount++;
        }
        return palCount;
    }
}